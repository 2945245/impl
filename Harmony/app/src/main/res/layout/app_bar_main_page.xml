<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPageActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Harmony.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="bottom"
            android:background="?attr/colorPrimary"
            android:clickable="true"
            android:contentDescription="@string/common_google_play_services_enable_button"
            android:gravity="bottom"
            app:popupTheme="@style/Theme.Harmony.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_main_page" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/navigation_drawer_close"
        app:srcCompat="@android:drawable/ic_dialog_email" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:contentDescription="@string/common_open_on_phone"
        app:srcCompat="@android:drawable/ic_menu_call" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:contentDescription="@string/menu_home"
        app:srcCompat="@drawable/googleg_standard_color_18" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="270dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:contentDescription="@android:string/fingerprint_icon_content_description"
        app:srcCompat="@android:drawable/ic_menu_directions"
        tools:targetApi="m" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="258dp"
        android:layout_height="174dp"
        android:layout_gravity="center"
        android:layout_marginBottom="350dp"
        android:contentDescription="@string/nav_header_desc"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="102dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:layout_marginBottom="450dp"
        android:background="#EDE7E7"
        android:gravity="center"
        android:text="Harmony"
        android:textSize="20sp"
        android:textStyle="bold" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>