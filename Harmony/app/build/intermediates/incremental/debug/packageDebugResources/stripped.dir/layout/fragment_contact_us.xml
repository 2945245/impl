<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ContactUs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.contact_us.ContactUsFragment" >

    <LinearLayout
        android:id="@+id/linearLayout36"
        android:layout_width="347dp"
        android:layout_height="494dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.721">

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="Our location"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/street"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="textPostalAddress"
            android:text="Solvej 32"
            android:visibility="visible"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/city"
            android:layout_width="124dp"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="textPostalAddress"
            android:text="Horsens, 8700"
            android:visibility="visible"
            tools:visibility="visible" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="23dp" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="138dp"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="phone"
            android:text="+45 91 99 41 63"
            android:visibility="visible"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/mail"
            android:layout_width="279dp"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="massageharmonyspa@gmail.com" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="23dp" />

        <TextView
            android:id="@+id/opening"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="Opening hours"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Monday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monday:          17:00-20:00" />

        <TextView
            android:id="@+id/tuesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tuesday:         13:00-20:00" />

        <TextView
            android:id="@+id/wednesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wednesday:    Closed" />

        <TextView
            android:id="@+id/thursday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thursday:       10:00-20:00" />

        <TextView
            android:id="@+id/friday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Friday:             10:00-20:00" />

        <TextView
            android:id="@+id/saturday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saturday:        10:00-18:00" />

        <TextView
            android:id="@+id/sunday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sunday:           10:00-13:00" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="146dp"
        android:layout_height="57dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout36"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.879">

        <TextView
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textColor="#000000"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="42dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout36"
        app:layout_constraintVertical_bias="0.272">

        <ImageButton
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:contentDescription="Call"
            android:src="@drawable/fui_ic_phone_white_24dp" />

        <ImageButton
            android:id="@+id/Email"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:contentDescription="Email"
            android:src="@drawable/ic_email" />

        <ImageButton
            android:id="@+id/facebook"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:contentDescription="facebook"
            android:src="@drawable/facebook" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:contentDescription="map" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>