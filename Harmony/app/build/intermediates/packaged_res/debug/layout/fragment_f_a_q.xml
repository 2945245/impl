<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FAQ"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.faq.FAQFragment" >

    <LinearLayout
        android:id="@+id/linearLayout37"
        android:layout_width="64dp"
        android:layout_height="35dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.158">

        <TextView
            android:id="@+id/faq"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="FAQ"
            android:textColor="#000000"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout38"
        android:layout_width="361dp"
        android:layout_height="507dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="25dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout37"
        app:layout_constraintVertical_bias="0.209">

        <TextView
            android:id="@+id/policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WHAT IS YOUR SALONS POLICYâ€™S?"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:text="If you need to CANCEL or RESCHEDULE your appointment, we kindly ask you to give us a 24 hour notice! Otherwise you will be charged 50% for CANCELED/ RESCHEDULED appointments or 100% for NO SHOWS!" />

        <TextView
            android:id="@+id/offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DO YOU OFFER GIFT CARDS?"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/gift"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:text="Absolutely! Salon and spa treatments are the perfect gift. Purchase a Gift Card Online (through e-mail), or feel free to stop by the salon to purchase it in person" />

        <TextView
            android:id="@+id/rules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WHAT ARE THE GIFT CARD RULES?"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/rules1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Money are refundable ONLY 14 days after purchase!" />

        <TextView
            android:id="@+id/rules2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. EXPIRED cards are not accepted or refundable! " />

        <TextView
            android:id="@+id/rules3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. BOOK an appointment AT LEAST with 1 month BEFORE expiration date, to be sure you can get a time!" />

        <TextView
            android:id="@+id/rules4"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="4. If the rules are not respected, MONEY are not refundable!" />

        <TextView
            android:id="@+id/pregnant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I AM PREGNANT. CAN I GET A MASSAGE?"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pillow"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:text="Yes, you can! A special pillow will be used!" />

        <TextView
            android:id="@+id/parking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DO YOU HAVE PARKING SPACES?"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/park"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="Yes, in front of the location." />

        <TextView
            android:id="@+id/students"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DO YOU OFFER DISCOUNTS FOR STUDENTS?"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/stud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yes,please check the service page!" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="105dp"
        android:layout_height="46dp"
        android:layout_marginStart="274dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout38">

        <Button
            android:id="@+id/Home"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Back" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>